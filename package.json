{
  "name": "persian-tools",
  "private": false,
  "version": "1.1.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm generate:og && next build",
    "build:lib": "tsup",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:ci": "pnpm lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ci": "PLAYWRIGHT_SKIP_FIREFOX=1 playwright test --project=chromium --reporter=list",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check .",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ci:quick": "pnpm lint && pnpm typecheck && pnpm vitest --run",
    "bench": "vitest bench",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:api": "typedoc",
    "release": "semantic-release",
    "generate:og": "node scripts/generate-og-images.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:seed:reset": "pnpm exec tsx prisma/reset-seed.ts",
    "postinstall": "prisma generate"
  },
  "codex": {
    "mcp-start": "bash scripts/mcp-start.sh"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "framer-motion": "^12.33.0",
    "jszip": "^3.10.1",
    "next": "^16.1.6",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@modelcontextprotocol/server-everything": "^2026.1.26",
    "@next/bundle-analyzer": "^16.1.6",
    "@openai/codex-shell-tool-mcp": "^0.98.0",
    "@playwright/test": "^1.51.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.3",
    "@semantic-release/npm": "^13.1.3",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-interactions": "9.0.0-alpha.10",
    "@storybook/addon-links": "10.2.7",
    "@storybook/nextjs": "10.2.7",
    "@storybook/react": "10.2.7",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "semantic-release": "^25.0.3",
    "storybook": "10.2.7",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "tsup": "^8.3.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./numbers": {
      "types": "./dist/numbers/index.d.ts",
      "import": "./dist/numbers/index.mjs",
      "require": "./dist/numbers/index.js"
    },
    "./localization": {
      "types": "./dist/localization/index.d.ts",
      "import": "./dist/localization/index.mjs",
      "require": "./dist/localization/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.mjs",
      "require": "./dist/validation/index.js"
    },
    "./finance": {
      "types": "./dist/finance.d.ts",
      "import": "./dist/finance.mjs",
      "require": "./dist/finance.js"
    },
    "./date-tools": {
      "types": "./dist/date-tools.d.ts",
      "import": "./dist/date-tools.mjs",
      "require": "./dist/date-tools.js"
    }
  },
  "typesVersions": {
    "*": {
      "numbers": [
        "dist/numbers/index.d.ts"
      ],
      "localization": [
        "dist/localization/index.d.ts"
      ],
      "validation": [
        "dist/validation/index.d.ts"
      ],
      "finance": [
        "dist/finance.d.ts"
      ],
      "date-tools": [
        "dist/date-tools.d.ts"
      ],
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "description": "A comprehensive collection of free online tools for Persian speakers - PDF tools, financial calculators, image processing. Client-side processing for privacy and security.",
  "keywords": [
    "persian",
    "farsi",
    "tools",
    "pdf",
    "calculator",
    "image",
    "online",
    "free",
    "privacy",
    "offline"
  ],
  "author": "Persian Tools Team",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asdeveloop/persian-tools.git"
  },
  "bugs": {
    "url": "https://github.com/asdeveloop/persian-tools/issues"
  },
  "homepage": "https://persian-tools.ir",
  "pnpm": {
    "overrides": {
      "lodash": "4.17.23",
      "hono": "4.11.7"
    }
  }
}
