{
  "name": "persian-tools",
  "private": false,
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm generate:og && next build",
    "build:lib": "tsup",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:ci": "pnpm lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check .",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "bench": "vitest bench",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:api": "typedoc",
    "release": "semantic-release",
    "generate:og": "node scripts/generate-og-images.mjs"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "framer-motion": "^12.31.0",
    "jszip": "^3.10.1",
    "next": "^16.1.6",
    "pg": "^8.14.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.42.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^10.2.5",
    "@storybook/nextjs": "^10.2.5",
    "@storybook/react": "^10.2.5",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "semantic-release": "^25.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.3",
    "@semantic-release/npm": "^13.1.3",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "tsup": "^8.3.0",
    "typedoc": "^0.28.16",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "description": "A comprehensive collection of free online tools for Persian speakers - PDF tools, financial calculators, image processing. Client-side processing for privacy and security.",
  "keywords": [
    "persian",
    "farsi",
    "tools",
    "pdf",
    "calculator",
    "image",
    "online",
    "free",
    "privacy",
    "offline"
  ],
  "author": "Persian Tools Team",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asdeveloop/persian-tools.git"
  },
  "bugs": {
    "url": "https://github.com/asdeveloop/persian-tools/issues"
  },
  "homepage": "https://persian-tools.ir"
}
