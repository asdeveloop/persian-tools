{
  "name": "persian-tools",
  "private": false,
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm generate:og && next build",
    "build:lib": "tsup",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:ci": "pnpm lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "check": "pnpm lint && pnpm typecheck && pnpm format:check",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check .",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ci:quick": "pnpm lint && pnpm typecheck && pnpm vitest --run",
    "bench": "vitest bench",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:api": "typedoc",
    "release": "semantic-release",
    "generate:og": "node scripts/generate-og-images.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    "prisma:seed:reset": "pnpm exec tsx prisma/reset-seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "framer-motion": "^12.29.2",
    "jszip": "^3.10.1",
    "next": "^14.2.5",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.10.38",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@next/bundle-analyzer": "^14.2.5",
    "@playwright/test": "^1.42.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/nextjs": "^7.6.10",
    "@storybook/react": "^7.6.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.8",
    "tailwindcss": "^3.4.1",
    "terser": "^5.46.0",
    "tsup": "^8.3.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.27.6",
    "typescript": "5.5.4",
    "vitest": "^1.6.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "description": "A comprehensive collection of free online tools for Persian speakers - PDF tools, financial calculators, image processing. Client-side processing for privacy and security.",
  "keywords": [
    "persian",
    "farsi",
    "tools",
    "pdf",
    "calculator",
    "image",
    "online",
    "free",
    "privacy",
    "offline"
  ],
  "author": "Persian Tools Team",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asdeveloop/persian-tools.git"
  },
  "bugs": {
    "url": "https://github.com/asdeveloop/persian-tools/issues"
  },
  "homepage": "https://persian-tools.ir"
}
